@model Consultant

@{
    ViewData["Title"] = "Details Consultant";
}

<partial name="_GeneralNotice" />

<div class="card mx-auto" style="max-width: 1200px; margin-top: 100px;border: 1px solid #000">

    <form asp-controller="Consultants" asp-action="Details">

        <div class="card-header text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                @Html.DisplayFor(model => model.Name)
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="form-label"></label>
                @Html.DisplayFor(model => model.Role)
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                @Html.DisplayFor(model => model.Email)
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="form-label"></label>
                <img src=@Html.DisplayFor(model => model.Image) style="display: block;
                                          margin-left: auto;
                                          margin-right: auto;
                                          border-radius: 50%;" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Team" class="form-label"></label>
                @Html.DisplayFor(model => model.Team)
                <span asp-validation-for="Team" class="text-danger"></span>
            </div>


        </div>
        <div class="card-footer text-center">
            <a asp-controller="Consultant" asp-action="Edit" class="btn btn-outline-secondary" style="width:120px">Edit</a>
            <a asp-controller="Consultant" asp-action="Index" class="btn btn-outline-secondary" style="width:120px">Cancel</a>
        </div>
    </form>


</div>


