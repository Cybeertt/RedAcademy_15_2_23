@model Consultant

@{
    ViewData["Title"] = "Delete Consultant";
}

<partial name="_GeneralNotice" />

<div class="card mx-auto" style="max-width: 1200px; margin-top: 100px;border: 1px solid #000">

    <form asp-controller="Consultants" asp-action="Delete">

        <div class="card-header text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All" class="text-danger"></div>
            <table align="center" style="width:100%">
                <tr>
                    <td rowspan="5">
                        <img src=@Html.DisplayFor(model => model.Image) style="display: block;
                                          margin-left: auto;
                                          margin-right: auto;
                                          border-radius: 50%;" />
                    </td>
                    <td><b>Name:</b> @Html.DisplayFor(model => model.Name)</td>
                    <td><b>Team:</b> @Html.DisplayFor(model => model.Team)</td>
                    <td rowspan="2"><b>Active:</b> @Html.DisplayFor(model => model.Active)</td>
                </tr>
                <tr>
                    <td><b>Email:</b> @Html.DisplayFor(model => model.Email)</td>
                    <td><b>Role:</b> @Html.DisplayFor(model => model.Role)</td>
                </tr>
            </table>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="Consultant" asp-action="Delete" class="btn btn-danger" style="width:120px">Delete</a>
            <a asp-controller="Consultant" asp-action="Index" class="btn btn-outline-secondary" style="width:120px">Cancel</a>
        </div>
    </form>


</div>


